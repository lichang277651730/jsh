    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
    </style>
    <!-- 滑动activity必须使用该主题，防侧滑时黑屏 -->
    <style name="SwipeBackTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 首页导航 RadioButton -->
    <style name="RadioButtonHomeTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/sl_home_rb_txtcolor</item>
    </style>

    <style name="SearchTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/mygray</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/sl_search_bar</item>
    </style>

    <style name="DividerLine">
        <item name="android:background">@color/myline</item>
    </style>

    <style name="HorizontalDividerLine" parent="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="HorizontalDivider_ten" parent="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/dividerLine</item>
    </style>


    <style name="VerticalDividerLine" parent="DividerLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HorizontalPlaceHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 字体 -->
    <style name="text_main">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_14sp_black" parent="text_main">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/myblack</item>
    </style>

    <style name="text_14sp_white" parent="text_main">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_14sp_red" parent="text_main">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/myred</item>
    </style>

    <style name="text_15sp_black" parent="text_main">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/myblack</item>
    </style>

    <style name="text_15sp_white" parent="text_main">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_15sp_red" parent="text_main">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/myred</item>
    </style>

    <style name="text_16sp_black" parent="text_main">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/myblack</item>
    </style>
    <style name="text_10sp_black" parent="text_main">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/myblack</item>
    </style>

    <style name="text_16sp_white" parent="text_main">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_16sp_red" parent="text_main">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/myred</item>
    </style>

    <style name="editText_base">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/mygray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <style name="customCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sl_cart_checkbox</item>
    </style>
    <style name="customAppraiseCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sl_appraise_checkbox</item>
    </style>

    <style name="bigButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/sl_cart_cb_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/largePadding</item>
        <item name="android:paddingRight">@dimen/largePadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="bigRedButton" parent="@style/bigButton">
        <item name="android:background">@drawable/sl_btn_red_bg</item>
    </style>
    <style name="bigBlueButton" parent="@style/bigButton">
        <item name="android:background">@drawable/sl_btn_blue_bg</item>
    </style>
    <style name="bigOrangeButton" parent="@style/bigButton">
        <item name="android:background">@drawable/sl_btn_orange_bg</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
