<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <!-- <item name="colorAccent">@color/colorAccent</item> -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 首页导航 RadioButton -->
    <style name="RadioButtonHomeTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@color/sl_home_rb_txtcolor</item>
    </style>

    <style name="SearchTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/mygray</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/sl_search_bar</item>
    </style>
</resources>
