<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".center.RegisterActivity">

    <include
        layout="@layout/include_title"/>

    <ImageView
        style="@style/text_15sp_black"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="12dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_15sp_black"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="帐号"/>

        <com.common.widget.MyEditText
            android:id="@+id/register1_phone_et"
            style="@style/text_15sp_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparency"
            android:hint="请输入你的手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textColorHint="@color/myhint"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:src="@color/myline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_15sp_black"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="密码"/>

        <com.common.widget.MyEditText
            android:inputType="textPassword"
            android:id="@+id/register1_pswd_et"
            style="@style/text_15sp_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:digits="0123456789abcdefjghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入登录密码"
            android:maxLength="24"
            android:textColor="@color/black"
            android:textColorHint="@color/myhint"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_15sp_black"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="确认密码"/>

        <com.common.widget.MyEditText
            android:inputType="textPassword"
            android:id="@+id/again_pswd_et"
            style="@style/text_15sp_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:digits="0123456789abcdefjghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请再次输入登录密码"
            android:maxLength="24"
            android:textColor="@color/black"
            android:textColorHint="@color/myhint"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:src="@color/myline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_15sp_black"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="验证码"/>

        <com.common.widget.MyEditText
            android:id="@+id/register1_code_et"
            style="@style/text_15sp_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:digits="abcdefghijgklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:hint="请输入短信验证码"
            android:maxLength="4"
            android:textColor="@color/black"
            android:textColorHint="@color/myhint"/>

        <View style="@style/VerticalDividerLine"/>

        <TextView
            android:enabled="false"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@drawable/sl_count_text"
            android:id="@+id/register1_change_tv"
            style="@style/text_15sp_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:text="获取验证码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/myline"/>

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        style="@style/text_14sp_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在锦晟汇微信平台注册过的用户请直接登录。"/>

    <Button
        android:id="@+id/register1_register_btn"
        style="@style/text_16sp_white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sl_red2gray_btn_bg"
        android:gravity="center"
        android:text="注册"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            style="@style/text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有帐号?"
            android:textColor="@color/mygray"/>

        <TextView
            android:id="@+id/register1_login_tv"
            style="@style/text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_rectangle_red_bg"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="登录"
            android:textColor="@color/mygray"/>
    </LinearLayout>
</LinearLayout>