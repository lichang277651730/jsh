<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_ad"
        android:layout_width="120dp"
        android:layout_height="80dp"
        tools:src="@mipmap/img_loading_default"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_get_huibi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/shape_red_round4_bg"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:text="赚粮票"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/textColorPrimary"
                    tools:text="快速申请办卡刘阿姨"/>
            </LinearLayout>


            <View style="@style/HorizontalPlaceHolder"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_nine"
                android:textSize="15sp"
                tools:text="发布时间：2017-01-17"/>

                <TextView
                    android:id="@+id/tv_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginRight="20dp"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="广告简介广告简介广告简介广告简介广告简介广告简介广告简介广告简介"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_ad_over"
            android:layout_margin="1dp"
            android:scaleType="fitXY"
            android:layout_gravity="end|bottom"/>
    </FrameLayout>

</LinearLayout>