<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.common.widget.MyHeadImageView
            android:id="@+id/iv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_mine_head_default"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_head"
            android:gravity="center_vertical"
            android:text="157****6292"
            android:textSize="16sp"/>

        <RatingBar
            android:id="@+id/rb_love"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:isIndicator="true"
            android:paddingTop="16dp"
            android:progressDrawable="@drawable/custom_love_ratingbar"
            android:rating="5"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_phone"
            android:layout_below="@id/tv_phone"
            android:layout_marginTop="4dp"
            android:text="新鲜新鲜，物流快，价格便宜实惠"
            android:textColor="@color/myblack"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_comment"
            android:layout_below="@id/tv_comment"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="2016-07-12 11:00:00"
            android:textColor="@color/mygray"
            android:textSize="14sp"/>
    </RelativeLayout>
</LinearLayout>