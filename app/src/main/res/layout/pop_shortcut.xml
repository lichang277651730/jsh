<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="2dp"
              android:orientation="vertical">

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_marginLeft="80dp"
        android:src="@mipmap/search_ic"/>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_shortcut_pop_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pop_shortcut_search"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:gravity="center">

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/pop_search"/>
            <TextView
                style="@style/text_16sp_black"
                android:text="搜索"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/myline"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/pop_shortcut_home"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:gravity="center">

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/pop_home"/>
            <TextView
                style="@style/text_16sp_black"
                android:text="首页"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>