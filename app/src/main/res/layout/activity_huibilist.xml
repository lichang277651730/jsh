<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <include layout="@layout/include_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@mipmap/img_huibi_bg">
        <TextView
            android:id="@+id/tv_huibi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_huibi_center"
            android:drawablePadding="8dp"
            android:textColor="#BBE5FF"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:layout_marginBottom="16dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="粮票明细"/>
        <View style="@style/VerticalDividerLine"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/tv_use"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="使用记录"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="2dp">
        <View
            android:id="@+id/v_huibi_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="30dp"
            android:visibility="invisible"
            android:background="@color/main"/>
        <View
            android:id="@+id/v_huibi_use"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:visibility="invisible"
            android:background="@color/main"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/mybg"/>
    <FrameLayout
        android:id="@+id/fl_huibi_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mybg">
    </FrameLayout>
</LinearLayout>