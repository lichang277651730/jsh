<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context=".home.SearchResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/toleft_white"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_bg_pause"
            android:orientation="horizontal">

            <TextView
                style="@style/text_16sp_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="2.5dp"
                android:paddingLeft="15dp"
                android:text="商品"
                android:textSize="17sp"/>


            <com.common.widget.MyEditText
                android:id="@+id/et_keyword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/transparency"
                android:gravity="bottom"
                android:hint="搜索商品"
                android:imeOptions="actionSearch"
                android:maxLength="8"
                android:minWidth="100dp"
                android:paddingBottom="2.5dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_grid2list"
            style="@style/text_16sp_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="视图"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/goods_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all"
            style="@style/text_16sp_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="综合"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/myline"/>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_price"
                style="@style/text_16sp_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="价格"/>

            <ImageView
                android:id="@+id/iv_price_sort"
                android:scaleType="fitCenter"
                android:src="@mipmap/sort_default"
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="20dp"/>
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/myline"/>
        <TextView
            android:id="@+id/tv_sales"
            style="@style/text_16sp_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="销量"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/myline"/>
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    </FrameLayout>
</LinearLayout>