<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View style="@style/HorizontalDividerLine"
          android:id="@+id/hot_divider"/>
    <RelativeLayout
        android:id="@+id/rl_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp">

        <ImageView
            android:id="@+id/iv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/list_zuire_h"/>

        <com.common.widget.AutoTextView
            android:id="@+id/atv_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_hot"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/backgroundColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/icon_home_hot_goods"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/myblack"
            android:text="推荐商品"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@mipmap/list_gengduo_shushi_h"/>
    </LinearLayout>
    <!--<View style="@style/HorizontalDividerLine"/>-->
</LinearLayout>