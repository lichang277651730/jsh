<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">


    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="120dp"
        android:layout_height="92dp"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_loading_default"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_goods"
            android:layout_alignTop="@id/iv_goods"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="优质鸡爪"
            android:textColor="@color/textColorPrimary"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/tv_name"
            android:layout_alignLeft="@id/tv_name"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="品牌"
                android:textColor="@color/color_nine"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:maxLines="1"
                android:text="规格"
                android:textColor="@color/color_nine"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_goods"
            android:layout_alignBottom="@id/iv_goods"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="￥180.0"
                android:textColor="@color/nowPriceColor"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_market_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="￥180.0"
                android:textColor="@color/marketPriceColor"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="4dp"
                android:src="@mipmap/icon_cart"
                android:visibility="gone"/>
        </LinearLayout>
</RelativeLayout>