        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0px"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/nav_sousuo_h"/>

            <com.common.widget.MyEditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparency"
                android:gravity="center_vertical"
                android:hint="请输入搜索的商品"
                android:maxLength="8"
                android:imeOptions="actionSearch"
                android:minWidth="100dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gosearch"
            style="@style/text_16sp_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="搜索"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mybg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="热门搜索"
            android:textColor="@color/myblack"
            android:textSize="16sp"/>
    </LinearLayout>

    <com.common.widget.MyTagView
        android:id="@+id/tag_hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp">
    </com.common.widget.MyTagView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mybg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="历史搜索"
            android:textColor="@color/myblack"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="清空搜索"
            android:textColor="@color/myblack"
            android:textSize="16sp"/>
    </LinearLayout>

    <com.common.widget.MyTagView
        android:id="@+id/tag_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp">
    </com.common.widget.MyTagView>
    <View
        android:background="@color/mybg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>