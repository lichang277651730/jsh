<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/vp_homebanner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#f4f4f4"
        android:overScrollMode="never"
        app:banner_indicatorGravity="center_horizontal|bottom"
        app:banner_pointDrawable="@drawable/sl_ad_banner_point"
        app:banner_pointTopBottomMargin="3dp"
        app:banner_tipTextColor="@color/white"
        app:banner_tipTextSize="15dp"
        app:banner_pointContainerBackground="@color/transparency"/>
    <View style="@style/HorizontalDividerLine"
        android:layout_gravity="bottom"/>
</FrameLayout>