<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              tools:context=".center.AddressAddActivity">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_view_block"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=" 收 件 人 "
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <View style="@style/VerticalDividerLine"/>

            <com.common.widget.ClearEditText
                android:id="@+id/et_consignee"
                style="@style/editText_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:hint="请输入收件人姓名"/>
        </LinearLayout>

        <View style="@style/HorizontalDividerLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="联系电话"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <View style="@style/VerticalDividerLine"/>

            <com.common.widget.ClearEditText
                android:id="@+id/et_phone"
                style="@style/editText_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:layout_weight="1"
                android:hint="请输入收件人电话"
                android:inputType="phone"/>
        </LinearLayout>

        <View style="@style/HorizontalDividerLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="所在地区"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <View style="@style/VerticalDividerLine"/>

            <EditText
                android:id="@+id/et_location"
                style="@style/editText_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="点击选择"
                android:focusable="false"
                android:maxLines="1"
                android:inputType="phone"/>

            <View style="@style/VerticalDividerLine"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_location"
                android:drawablePadding="4dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/mygray"
                android:textSize="16sp"
                android:text="定位"/>
        </LinearLayout>

        <View style="@style/HorizontalDividerLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="详细地址"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <View style="@style/VerticalDividerLine"/>

            <com.common.widget.ClearEditText
                android:id="@+id/et_address"
                style="@style/editText_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:hint="什么街多少号"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mybg"/>
    <RelativeLayout
        android:id="@+id/rl_default"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="设为默认地址"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <CheckBox
            android:id="@+id/cb_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mybg"/>
</LinearLayout>